{
  "name": "tailwind",
  "version": "1.0.0",
  "description": "blazor-tailwind integration",
  "main": "index.js",
  "scripts": {
    "buildcss": "postcss ../Client/Styles/*.css -d ../Client/wwwroot/css --config ./postcss.config.js",
    "buildrazorcss": "postcss ../Client/**/*.razor.pcss --dir ../Client/ --base ../Client/ --ext .css --config ./postcss.config.js",
    "build-prod": "postcss --env production ../Client/Styles/*.css -d ../Client/wwwroot/css --ext .min.css --config ./postcss.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^10.0.4",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "postcss": "^8.1.13",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-nesting": "^7.0.1",
    "tailwindcss": "^2.0.1"
  }
}
